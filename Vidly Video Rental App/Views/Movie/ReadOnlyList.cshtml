@using Vidly_Video_Rental_App.Models
@model List<Vidly_Video_Rental_App.Models.Movie>
@{
	ViewBag.Title = "Movies";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>



<table id="movies" class="table table-bordered table-hover">
	<thead>
	<tr>
		<th>Movies</th>
		<th>Genre</th>
	
	</tr>
	</thead>
	<tbody>
		@foreach (Movie movie in Model)
		{
			<tr>
				<td>
					@movie.Name <!--Change to a link where the user can see the movie details without being able to change them-->
				</td>
				<td>
					@movie.Genre.Name
				</td>
			</tr>
		}
	</tbody>
</table>


@section scripts {
	<script>

		$(document).ready(function () {
			//Implement DataTables plugin
			var table = $("#movies").DataTable();
		})

	</script>
}
